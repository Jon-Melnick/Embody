{
  "name": "Embody",
  "version": "1.00.1",
  "manifest_version": 2,

  "description": "Encourage mindful use of tech & decrease mental exhaustion & emotional disconnection from oneself during prolonged use of it.",

  "background": {
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "offline_enabled": true,

  "permissions": ["notifications"]
}
